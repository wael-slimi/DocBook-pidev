{% extends 'base.html.twig' %}

{% block title %}Caregiver{% endblock %}

{% block body %}
    <h1>Caregiver</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ caregiver.id }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ caregiver.role }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ caregiver.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ caregiver.createdAt ? caregiver.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ caregiver.creationDate ? caregiver.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ caregiver.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ caregiver.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ caregiver.password }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ caregiver.phone }}</td>
            </tr>
            <tr>
                <th>Relationship_type</th>
                <td>{{ caregiver.relationshipType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_caregiver_index') }}">back to list</a>

    <a href="{{ path('app_caregiver_edit', {'id': caregiver.id}) }}">edit</a>

    {{ include('caregiver/_delete_form.html.twig') }}
{% endblock %}
