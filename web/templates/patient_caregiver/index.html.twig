{% extends 'base.html.twig' %}

{% block title %}PatientCaregiver index{% endblock %}

{% block body %}
    <h1>PatientCaregiver index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Permissions</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient_caregiver in patient_caregivers %}
            <tr>
                <td>{{ patient_caregiver.id }}</td>
                <td>{{ patient_caregiver.permissions }}</td>
                <td>{{ patient_caregiver.status }}</td>
                <td>
                    <a href="{{ path('app_patient_caregiver_show', {'id': patient_caregiver.id}) }}">show</a>
